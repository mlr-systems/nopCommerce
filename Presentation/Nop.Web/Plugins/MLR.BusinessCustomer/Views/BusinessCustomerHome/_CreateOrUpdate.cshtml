@using Nop.Web.Framework
@model Nop.Plugin.MLR.BusinessCustomer.Domain.BusinessCustomer
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.BusinessCustomerId)

<script>
    $(document).ready(function () {
        $("#business-customer-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            select: tabstrip_on_tab_select
        });
    });
</script>
<div id="business-customer-edit">
    <ul>
        <li class="k-state-active">
            Info
        </li>
        <li>
            Roles
        </li>
        @if (Model.Id > 0)
        {
            <li>
                Orders
            </li>
            <li>
                Addresses
            </li>
            <li>
                Quote Sheet
            </li>
            <li>
                Activity Log
            </li>
        }
    </ul>
    <div>
        @BusinessCustomerInfo()
    </div>
    <div>
        <h1>Roles!</h1>
    </div>
    @if (Model.Id > 0)
    {
        <div>
            <h1>Orders!</h1>
        </div>
        <div>
            <h1>Addresses!</h1>
        </div>
        <div>
            <h1>Quote Sheet!</h1>
        </div>
        <div>
            <h1>Activity Log!</h1>
        </div>
    }
</div>

@helper BusinessCustomerInfo()
{
    <table class="adminContent business-customer-info-tab">
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.BusinessName):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.BusinessName)
                @Html.ValidationMessageFor(model => model.BusinessName)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.BusinessCustomerContact):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.BusinessCustomerContact)
                @Html.ValidationMessageFor(model => model.BusinessCustomerContact)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.ResellerNumber):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.ResellerNumber)
                @Html.ValidationMessageFor(model => model.ResellerNumber)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.W9):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.W9)
                @Html.ValidationMessageFor(model => model.W9)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.Id):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </td>
        </tr>
    </table>
}
