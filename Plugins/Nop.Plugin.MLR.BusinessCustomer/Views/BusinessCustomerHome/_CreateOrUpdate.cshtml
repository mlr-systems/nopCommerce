            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.BusinessName):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.BusinessName)
                @Html.ValidationMessageFor(model => model.BusinessName)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.BusinessCustomerContact):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.BusinessCustomerContact)
                @Html.ValidationMessageFor(model => model.BusinessCustomerContact)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.ResellerNumber):
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.ResellerNumber)
                @Html.ValidationMessageFor(model => model.ResellerNumber)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.NopLabelFor(model => model.W9):
            </td>
            <td class="adminData">                
                @Html.EditorFor(model => model.W9)
                @Html.ValidationMessageFor(model => model.W9)
            </td>
        </tr>
    </table>
}

@helper BusinessCustomerAddresses() {
    <div id="business-customer-addresses-grid"></div>

        <script>
        $(document).ready(function () {
            $("#business-customer-addresses-grid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("AddressesSelect", "BusinessCustomerHome", new { businessCustomerId = Model.BusinessCustomerId }))",
                            type: "POST",
                            dataType: "json",
                            data: addAntiForgeryToken
                        },
                        destroy: {
                            url: "@Html.Raw(Url.Action("AddressDelete", "BusinessCustomerHome", new { businessCustomerId = Model.BusinessCustomerId }))",
                            type: "POST",
                            dataType: "json",
                            data: addAntiForgeryToken
                        }
                    },
                    schema: {
                        data: "Data",
                        total: "Total",
                        errors: "Errors",
                        model: {
                            id: "Id"
                        }
                    },
                    error: function(e) {
                        display_kendoui_grid_error(e);
                        // Cancel the changes
                        this.cancelChanges();
                    },
                    serverPaging: true,
                    serverFiltering: true,
                    serverSorting: true
                },
                pageable: {
                    refresh: true,
                    numeric: false,
                    previousNext: false,
                    info: false
                },
                editable: {
                    confirmation: false,
                    mode: "inline"
                },
                scrollable: false,
                columns: [{
                    field: "FirstName",
                    title: "@T("Admin.Address.Fields.FirstName")"
                }, {
                    field: "LastName",
                    title: "@T("Admin.Address.Fields.LastName")"
                }, {
                    field: "Email",
                    title: "@T("Admin.Address.Fields.Email")"
                }, {
                    field: "PhoneNumber",
                    title: "@T("Admin.Address.Fields.PhoneNumber")"
                }, {
                    field: "FaxNumber",
                    title: "@T("Admin.Address.Fields.FaxNumber")"
                }, {
                    field: "AddressHtml",
                    title: "@T("Admin.Address")",
                    encoded: false
                }, {
                    field: "Id",
                    title: "@T("Admin.Common.Edit")",
                    width: 100,
                    template: '<a href="@Url.Content("/BusinessCustomerHome/AddressEdit?businessCustomerId=")@Model.BusinessCustomerId&addressid=#=Id#">@T("Admin.Common.Edit")</a>'
                }, {
                    command: { name: "destroy", text: "@T("Admin.Common.Delete")" },
                    title: "@T("Admin.Common.Delete")",
                    width: 100
                }]
            });
        });
        </script>
        <p>
            <input type="button" class="k-button" onclick="location.href='@Url.Action("AddressCreate", new { businessCustomerId = Model.BusinessCustomerId })'" value='@T("Admin.Customers.Customers.Addresses.AddButton")' />
        </p>
}