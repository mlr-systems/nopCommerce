@using Nop.Web.Framework
@model Nop.Plugin.MLR.BusinessCustomer.Domain.MLR_BusinessCustomer
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.BusinessCustomerId)

<script>
    $(document).ready(function () {
        $("#business-customer-edit").kendoTabStrip({
            animation: {
                open: {
                    effects: "fadeIn"
                }
            },
            select: tabstrip_on_tab_select
        });
    });
</script>
<div id="business-customer-edit">
    <ul>
        <li class="k-state-active">
            Info
        </li>
        <li>
            Roles
        </li>
        @if (Model.BusinessCustomerId > 0)
        {
            <li>
                Orders
            </li>
            <li>
               Addresses
            </li>
            <li>
                Quote Sheet
            </li>
            <li>
                Employees
            </li>
            <li>
                Activity Log
            </li>
            
        }
    </ul>
    <div>
        @BusinessCustomerInfo()
    </div>
    <div>
        <h1>Roles!</h1>
    </div>
    @if (Model.BusinessCustomerId > 0)
    {
        <div>
            <h1>Orders!</h1>
        </div>
        <div>
            @BusinessCustomerAddresses()
        </div>
        <div>
            <h1>Quote Sheet!</h1>
        </div>
        <div>
            <h1>Employees!</h1>
        </div>
        <div>
            <h1>Activity Log!</h1>
        </div>
    }
</div>

@helper BusinessCustomerInfo()
